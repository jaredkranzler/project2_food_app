<%- include('../partials/header'); -%>

<!-- This is the USER MENU PAGE -->
<!-- get data from admin menu -->
<!-- add button to add datta to cart menu -->


<% if (orderId) { -%>

  <div class="box">
    <ul>
        <% for (let i = 0; i < items.length; i++) { %>
            <li>
                
              <h3><%=items[i].name%></h3>
              <div><img src="<%=items[i].image%>"></div> <!-- try separating into its own div to resize -->
              <h3><%=items[i].body%></h3>
              <h3><%=items[i].price%></h3>
              <form action="/orders/additem" method="POST">
                <input type="hidden" name="itemid" value="<%=items[i].id%>">
                <input type="submit" value="Add to Cart"/>              
              </form>
            </li>
        <% } %>
    </ul>
  </div>

<% } else { -%>

  <form action="/orders" method="POST">
    <button>Create Order</button>
  </form>
  
<% } -%>



