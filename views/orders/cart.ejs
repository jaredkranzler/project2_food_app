          <div class="box">
          

            <div class="image">
              <img src="<%=items[i].image%>">
            </div>

            <div class ="text">
              <h3><%=items[i].name%></h3>
              <h3><%=items[i].body%></h3>
              <h3><%=items[i].price%></h3>

              <form action="/orders/cart/<%=items[i].id%>?_method=PUT" method="post">
